  <div class="mb-4 mx-10 p-4 bg-indigo-100 rounded-xl"><%= artist.biography %></div>

  <div class="flex space-x-4">
    <%= render partial: 'writings/writing', collection: artist.random_writings(3), as: :writing, locals: { artist: } %>
  </div>

  <%= link_to(artist_path(artist)) do %>
    <i class="fa-solid fa-circle-chevron-right mr-2"></i>
    <span class="font-medium text-indigo-900 hover:underline">
      Voir tous les Ã©crits de <%= artist.fullname %> (<%= artist.writings.count %>)
    </span>
  <% end %>
</div>
