<%= form_with(model: @artist, data: { turbo: true } ) do |form| %>
  <div class="flex align-center space-x-3">
    <div class="mb-4 flex-auto">
      <%= form.label :firstname, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :firstname, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="mb-4 flex-auto">
      <%= form.label :lastname, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :lastname, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
  </div>
  <div class="flex align-center space-x-3">
    <div class="mb-4 flex-auto">
      <%= form.label :birthdate, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.date_field :birthdate, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="mb-4 flex-auto">
      <%= form.label :deathdate, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.date_field :deathdate, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
  </div>
  <div class="mb-4" data-controller="trix">
    <%= form.rich_text_area :bio, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="flex items-center justify-between">
    <%= form.submit t("default.save"), class: "bg-sky-700 hover:bg-sky-900 text-white font-bold py-2 px-4 rounded-xl focus:outline-none focus:shadow-outline", data: {action: "click->modal#close"} %>
  </div>
<% end %>
