<% if controller_name == "writings" %>
  <%= writing.content %>
  <div class="flex justify-between items-center">
    <%= render "tags/form", url: artist_writing_tags_path(@artist, writing, taggable_type: "writing") if user_signed_in? %>
    <%= render partial: "writings/source", locals: {writing:} %>
  </div>
<% else %>
  <%= truncate(writing.content.to_plain_text, length: 200) %>
<% end %>
