<% if controller_name.in?(%w[writings calendar]) %>
  <%= writing.content %>
  <div class="flex items-center">
    <div id="tag_form">
      <%= render "tags/form", url: artist_writing_tags_path(artist, writing, taggable_type: "writing") if user_signed_in? %>
    </div>
    <div id="tag_list" class="flex">
      <%= render partial: "tags/list", locals: {artist:, writing:} %>
    </div>
  </div>
<% else %>
  <%= truncate(writing.content.to_plain_text, length: 200) %>
<% end %>
