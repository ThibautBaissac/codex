<div class="relative mx-10 mb-4">
  <%= form_with(url: search_artist_writings_path(@artist), method: :get, local: true, class: "search-form") do %>
    <%= text_field_tag :q, nil,
      class: "pl-4 pr-10 py-2 w-full bg-indigo-700 border border-gray-600 rounded-xl text-gray-100 focus:outline-none focus:border-gray-500 focus:bg-gray-700",
      placeholder: "Rechercher...",
      value: params[:q],
      "aria-label": "Rechercher" %>
    <div class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400">
      <i class="fas fa-search" aria-hidden="true"></i>
    </div>
  <% end %>
</div>
