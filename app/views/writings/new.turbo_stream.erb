<%= turbo_stream.update("alerts", partial: "shared/alerts/alerts") %>
<%= turbo_stream.replace "remote_modal" do %>
  <% title = action_name.in?(%w[new create]) ? t("writings.new") : l(@writing.date, format: :long) %>
  <%= render ModalComponent.new(title:) do %>
    <%= render "writings/form", artist: @artist, writing: @writing %>
  <% end %>
<% end %>
