<div class="relative mx-10 mb-4">
  <%= form_with(url: search_artist_writings_path(@artist), method: :get, remote: false, class: "search-form space-y-4", data: {controller: "form-submit-by-tag"}) do |form| %>
    <%= render partial: "writings/search_form/query", locals: {form:} %>
    <div class="flex flex-col md:flex-row md:space-x-4">
      <%= render partial: "writings/search_form/years", locals: {form:} %>
      <%= render partial: "writings/search_form/sources", locals: {form:, sources: @artist.sources} %>
    </div>
    <%= render partial: "writings/search_form/tags", locals: {tags: @tags} %>
  <% end %>
  <div class="mt-2 flex justify-between items-center">
    <%= t("writings.count", count: @pagy.count) %>
    <%= link_to(artist_writings_calendar_index_path(@artist), class: "hover:text-sky-800") do %>
      <i class="me-2 fa-regular fa-calendar"></i><%= t("writings.calendar") %>
    <% end %>
  </div>
</div>
