<div class="flex justify-center border-b-2 border-orange-700">
  <div class="relative w-fit h-fit mb-4">
    <i class="fa-solid fa-circle-user text-6xl text-orange-800 md:text-8xl"></i>
    <div class="absolute bottom-0 right-0">
      <%= render_in_modal(url: edit_user_path(@user), policy: policy(@user).edit?) do %>
        <%= render CircleIconComponent.new(icon: "fa-solid fa-edit") %>
      <% end %>
    </div>
  </div>
</div>
<div class="text-center">
  <h1><%= @user.name_or_email %></h1>
  <div>
    <i class="fa-solid fa-circle-chevron-right mr-2 text-orange-700"></i>
    <%= link_to(t("authentication.edit_password"), edit_authentication_password_path(current_user)) %>
  </div>
</div>
