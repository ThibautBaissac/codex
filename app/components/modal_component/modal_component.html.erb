<%= tag.turbo_frame(id: :remote_modal, target: :_top) do %>
  <div class="modal hidden fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center transition-opacity duration-500" data-controller="modal"
       aria-modal="true" role="dialog" aria-labelledby="<%= @title %>">
    <div class="bg-white rounded-xl overflow-hidden shadow-xl transform transition-all sm:w-full md:max-w-2xl lg:max-w-3xl divide-y p-4" style="max-height: 90vh;">
      <div class="mt-3">
        <div class="flex items-center justify-between mb-2">
          <h2 class="text-lg font-medium text-gray-900"><%= @title %></h2>
          <button id="closeButton" data-action="click->modal#close" style="width: 30px; height: 30px" class="flex items-center justify-center rounded-full bg-sky-950 hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-gray-300">
            <i class="fa-solid fa-xmark text-white text-base font-medium p-2"></i>
          </button>
        </div>
        <div class="overflow-y-auto" style="max-height: 75vh;">
          <%= content %>
        </div>
      </div>
    </div>
  </div>
<% end %>
